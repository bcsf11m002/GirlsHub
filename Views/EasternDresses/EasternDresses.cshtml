        </div>
    </div>
    <div class="container">
        <div class="row">
            <img src="/dresses/Eimage.png" class="col-md-2" style="height: 163px;" />
            <div class="col-md-10">
                <center><h1 style="font-size: 100px; font-family: 'Comic Sans MS'; background-color: lightgray; margin-top: -80px; padding-bottom: 0.37em; padding-top: 0.16em; margin-left: 14px; width: 920px; padding-left: 2.8em;">Dresses</h1></center>
            </div>
        </div>
        <div class="row">
            <ul class="col-md-2" style="list-style-type:none;font-family:'Comic Sans MS';font-size:large;">
                <li style="padding-top: 50px;">@Html.ActionLink("Jackets", "Jackets", "Jackets")</li>
                <li style="padding-top: 30px;">@Html.ActionLink("Clothes", "Clothes", "Clothes")</li>
                <li style="padding-top: 30px;">@Html.ActionLink("Watches", "Watches", "Watches")</li>
                <li style="padding-top: 30px;">@Html.ActionLink("Coats", "Coats", "Coats")</li>
                <li style="padding-top: 30px;">@Html.ActionLink("Sweaters", "Sweaters", "Sweaters")</li>
                <li style="padding-top: 30px;">@Html.ActionLink("Eastern Dresses", "EasternDresses", "EasternDresses")</li>
                <li style="padding-top: 30px;">@Html.ActionLink("Accessories", "Accessories", "Accessories")</li>
            </ul>
            <div class="col-md-10" style="top:50px;">
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox" style="align-content:center;">
                        <div class=" item active">
                            <img src="/dresses/Dresses1.jpg" style="margin: 0 auto; width: auto; height: 350px; max-height: 350px;">
                        </div>
                        <div class="item">
                            <img src="/dresses/Dresses2.jpg" style="margin: 0 auto; width: auto; height: 350px; max-height: 350px;">
                        </div>
                        <div class="item">
                            <img src="/dresses/Dresses3.jpg" style="margin: 0 auto; width: auto; height: 350px; max-height: 350px;">
                        </div>

                    </div>
                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <div class="row">
                    <a href="/EasternDresses/D1">
                        <img src="/dresses/D1.png" class="col-md-3" style="top: 50px; left: 130px; height: 300px;" />
                    </a>
                    <a href="/EasternDresses/D2">
